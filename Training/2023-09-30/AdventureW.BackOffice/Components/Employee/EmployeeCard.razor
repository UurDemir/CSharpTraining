@using AdventureW.BackOffice.Model;

<div class="card">
    <img src="data:image/png;base64,@Summary.Photo" class="card-img-top" alt="@Summary.FullName">
    <div class="card-body">
        <h5 class="card-title">@Summary.Id - @Summary.FullName</h5>
        <p class="card-text">@Summary.Title</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Summary.SuperVisor</li>
        <li class="list-group-item">@Summary.BirthDate.ToString("yyyy-MM-dd HH:mm:ss")</li>
        <li class="list-group-item">@Summary.HireDate.ToString("yyyy-MM-dd HH:mm:ss")</li>
    </ul>
    <div class="card-body">
        <a href="/employeeedit/@Summary.Id" class="card-link">Edit</a>
    </div>
</div>

@code {
    [Parameter]
    public EmployeeSummaryInfo Summary { get; set; }
}
